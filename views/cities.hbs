<h1>Cities 🏙️</h1>

<div class="row row-cols-1 row-cols-md-2 g-4">
  {{#each cities as |city|}}
  <div class="col">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">{{city.name}}</h5>
        <p class="operating-feedback" class="{{#unless city.active}}d-none{{/unless}}">Currently operating</p>
        {{#if city.active}}
          <button type="button" id="{{city.id}}" value="disable" class="btn btn-secondary btn-activate-city">Disable city</button>
        {{else}}
          <button type="button" id="{{city.id}}" value="activate" class="btn btn-warning btn-activate-city">Activate city</button>
        {{/if}}
        <a class="btn btn-primary" href="/cities/{{city.id}}" role="button">Ver más</a>
        <button type="button" value="{{city.id}}" class="btn btn-danger btn-delete-city">Delete city</button>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<script src="/js/cities.js"></script>